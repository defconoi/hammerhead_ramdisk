if [[ ! -z $2 ]]; then
	if [ -e /sys/module/msm_hotplug/$1 ]; then
		echo $2 > /sys/module/msm_hotplug/$1 2> /dev/null;
	fi
	if [ -e /sys/kernel/intelli_plug/$1 ]; then
		echo $2 > /sys/kernel/intelli_plug/$1 2> /dev/null;
	fi
	if [ -e /sys/kernel/bricked_hotplug/$1 ]; then
		echo $2 > /sys/kernel/bricked_hotplug/$1 2> /dev/null;
	fi
	if [ -e /sys/kernel/alucard_hotplug/$1 ]; then
		echo $2 > /sys/kernel/alucard_hotplug/$1 2> /dev/null;
	fi
fi

if [ -e /sys/module/msm_hotplug/$1 ] &&
	[ $(expr `cat /sys/module/msm_hotplug/msm_enabled`) -eq "1" ]; then
	echo `cat /sys/module/msm_hotplug/$1`
elif [ -e /sys/kernel/intelli_plug/$1 ] &&
	[ $(expr `cat /sys/kernel/intelli_plug/intelli_plug_active`) -eq "1" ]; then
	echo `cat /sys/kernel/intelli_plug/$1`
elif [ -e /sys/kernel/bricked_hotplug/$1 ] &&
	[ $(expr `cat /sys/kernel/bricked_hotplug/bricked_enabled`) -eq "1" ]; then
	echo `cat /sys/kernel/bricked_hotplug/$1`
elif [ -e /sys/kernel/bricked_hotplug/$1 ] &&
	[ $(expr `cat /sys/kernel/alucard_hotplug/hotplug_enable`) -eq "1" ]; then
	echo `cat /sys/kernel/alucard_hotplug/$1`
else
	echo `cat /sys/kernel/intelli_plug/$1`
fi
